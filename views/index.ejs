<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo</title>
    <link rel="stylesheet" href="main.css" />
   
</head>
<body>
    <div class="head">
        <h1>Add Task</h1>
        <form class="addition" method="post" action="/api/posts">
            <input type="text" name="task" placeholder="What-to-do" autocomplete="off" required>
            <button type="submit" >➕</button>
        </form>
    </div>
    <div class="task-list">
        <h2>Tasks List</h2>
            <% posts.forEach(post => { %>
                
                
            <div class="content">
                <p><%= post.content %></p>
                <a class="delete" href="/api/posts/delete/<%= post.id %>">❌</a>
            </div>

           <% }); %>
        </div>
    
        
</body>
</html>